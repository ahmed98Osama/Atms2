<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewingEmployeeData">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/employee_action_bar">
        <ImageView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/back"
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/go_back"/>
    </RelativeLayout>


    <ImageView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:src="@drawable/profile_image"
        android:layout_below="@id/employee_action_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/employee_profile_image"/>

    <TextView
        android:layout_width="@dimen/_220sdp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_20ssp"
        android:hint=" the employee name"
        android:layout_below="@id/employee_profile_image"
        android:drawableLeft="@drawable/empname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/employee_name_added_by_admin"/>

    <TextView
        android:layout_width="@dimen/_220sdp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_20ssp"
        android:layout_below="@id/employee_name_added_by_admin"
        android:hint=" the email "
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/email"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/employee_email"/>

    <TextView
        android:layout_width="@dimen/_220sdp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_20ssp"
        android:layout_below="@id/employee_email"
        android:hint=" employee department"
        android:drawableLeft="@drawable/department"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:inputType="number"
        android:maxLength="12"
        android:id="@+id/department_of_the_employee"/>

    <TextView
        android:layout_width="@dimen/_220sdp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_20ssp"
        android:layout_below="@id/department_of_the_employee"
        android:hint=" the phone number"
        android:drawableLeft="@drawable/phonenumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:inputType="number"
        android:maxLength="12"
        android:id="@+id/phone_number_employee"/>

    <Button
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_number_employee"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_200sdp"
        android:textSize="@dimen/_20ssp"
        android:text="edit"
        android:id="@+id/edit_employee_data"/>



    <Spinner
        android:layout_width="@dimen/_220sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_below="@+id/edit_employee_data"
        android:visibility="invisible"
        android:id="@+id/set_department_for_employee"/>


    <Button
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_department_for_employee"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_200sdp"
        android:textSize="@dimen/_20ssp"
        android:visibility="invisible"
        android:text="save"
        android:id="@+id/save_employee_data"/>
</RelativeLayout>
</ScrollView>